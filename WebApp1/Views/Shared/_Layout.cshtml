<!DOCTYPE html>
@{
    var AppVersion = WebApp1.Codes.MyApp.Version;
    var AppCulture = ViewBag.Culture;
    var AppLanguage = ViewBag.Language;
}
<html lang="@AppLanguage">
<head>
    <!-- App Version : @AppVersion -->
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="icon" href="/favicon.png" />

    @*animate css*@
    <link href="~/lib/animate-css/animate.min.css?@AppVersion" rel="stylesheet" />

    @*font-awesome*@
    <link href="~/lib/font-awesome/css/font-awesome.min.css?@AppVersion" rel="stylesheet" />
    @*font-awesome-animation*@
    <link href="~/lib/font-awesome-animation/font-awesome-animation.min.css?@AppVersion" rel="stylesheet" />

    @*bootstrap CSS*@
    <link href="~/lib/bootstrap/4.6.0/css/bootstrap.min.css?@AppVersion" rel="stylesheet" />

    @*kendo css - thema - bootstrap-v4*@
    <link href="~/lib/kendo/styles/kendo.bootstrap-v4.min.css?@AppVersion" rel="stylesheet" />
    <link href="~/lib/my-style-bootstrap-v4.css?@AppVersion" rel="stylesheet" />
    <link href="~/lib/ribbon/ribbon.min.css?@AppVersion" rel="stylesheet" />

    @*jquery JS*@
    <script src="~/lib/kendo/js/jquery.min.js?@AppVersion"></script>

    <script>

        document.addEventListener("DOMContentLoaded", function () {
            mnLang.prepare("@AppCulture");
            mnUser.prepare();
            mnApp.prepare();
            mnApp.setKendoDefaults("@AppCulture");

            mnNotification.prepare({ autoHideAfter: 750 });

            if (mnUser.Info.bLogin) {
                mnYetkiSablon.prepare();
                mnLookup.prepare();
            }
        });

        window.addEventListener('load', function () {
            //window).resize
            setTimeout(function () {
                $(window).resize();
            });
        });

    </script>
</head>
<body>
    @RenderBody()

    <div>

        @*Bootstrap JS (mnTreeMenu de kullanıldı)*@
        <script src="~/lib/bootstrap/4.6.0/js/bootstrap.bundle.min.js?@AppVersion"></script>

        @*kendo js*@
        @if (ViewBag.ControllerName == "Account")
        {
            <script src="~/lib/kendo/js/kendo.ui.core.min.js?@AppVersion"></script>
        }
        else
        {
            <script src="~/lib/kendo/js/kendo.all.min.js?@AppVersion"></script>
        }

        <script src="~/lib/kendo/js/kendo.aspnetmvc.min.js?@AppVersion"></script>
        <script src="@Url.Content("~/lib/kendo/js/messages/kendo.messages." + AppCulture + ".min.js?"+AppVersion)"></script>
        <script src="@Url.Content("~/lib/kendo/js/cultures/kendo.culture." + AppCulture + ".min.js?"+AppVersion)"></script>
        <link href="~/lib/kendo/styles/kendo.rtl.min.css?@AppVersion" rel="stylesheet" />

        @if (AppCulture == "ar-SA")
        {
            <script src="~/lib/kendo/js/cultures/kendo.culture.ar-SA.min.js?@AppVersion"></script>
        }

        @*jszip*@
        <script src="~/lib/jszip/jszip.min.js?@AppVersion"></script>

        @*Scroll*@
        <script src="~/lib/slimScroll/jquery.slimscroll.min.js?@AppVersion"></script>

        @*light gallery*@
        <script src="~/lib/jquery.mousewheel/picturefill.min.js?@AppVersion"></script>
        <script src="~/lib/jquery.mousewheel/jquery.mousewheel.min.js?@AppVersion"></script>
        <link href="~/lib/lightGallery/css/lightgallery.min.css?@AppVersion" rel="stylesheet" />
        <script src="~/lib/lightGallery/js/lightgallery-all.min.js?@AppVersion"></script>

        @* query.magnify - zoom image*@
        <link href="~/lib/magnify/css/magnify.css?@AppVersion" rel="stylesheet" />
        <script src="~/lib/magnify/js/jquery.magnify.min.js?@AppVersion"></script>
        <script src="~/lib/magnify/js/jquery.magnify-mobile.min.js?@AppVersion"></script>

        @* cropper js *@
        <link href="~/lib/cropperjs/cropper.min.css?@AppVersion" rel="stylesheet" />
        <script src="~/lib/cropperjs/cropper.min.js?@AppVersion"></script>

        @* kendo pdf için *@
        @*
            <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.2.2/pdf.js"></script>
            <script>
                window.pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.2.2/pdf.worker.js';
            </script>
        *@

        @*mn*@
        <script src="~/lib/mn/mnAlert.js?@AppVersion"></script>
        <script src="~/lib/mn/mnLang.js?@AppVersion"></script>
        <script src="~/lib/mn/mnLibs.js?@AppVersion"></script>
        <script src="~/lib/mn/mnLookup.js?@AppVersion"></script>
        <script src="~/lib/mn/mnNotification.js?@AppVersion"></script>
        <script src="~/lib/mn/mnPageView.js?@AppVersion"></script>
        <script src="~/lib/mn/mnPopupView.js?@AppVersion"></script>
        <script src="~/lib/mn/mnScrollUp.js?@AppVersion"></script>
        <script src="~/lib/mn/mnSideBarMenu.js?@AppVersion"></script>
        <script src="~/lib/mn/mnTreeMenu.js?@AppVersion"></script>
        <script src="~/lib/mn/mnYetkiSablon.js?@AppVersion"></script>


        @*comps*@
        @foreach (var item in WebApp1.Codes.MyApp.GetComps())
        {
            <script src="@item?@AppVersion"></script>
        }

    </div>

</body>
</html>
